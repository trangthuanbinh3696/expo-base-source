{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@app/*": ["./app/*"], 
      "@assets/*": ["./assets/*"], 
      "@components/*": ["./components/*"], 
      "@constants/*": ["./constants/*"], 
      "@hooks/*": ["./hooks/*"], 
      "@pages/*": ["./pages/*"], 
      "@theme/*": ["./theme/*"], 
      "@utils/*": ["./utils/*"], 
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
